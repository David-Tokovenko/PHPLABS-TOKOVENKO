<!DOCTYPE html>
<html>
<head>
    <title>Додати нового студента</title>
</head>
<body>
    <h1>Додати нового студента</h1>
    <form action="insert_student.php" method="post">
        <div>
            <label for="name">Ім'я:</label>
            <input type="text" id="name" name="name" required>
        </div>
        <br>
        <div>
            <label for="email">Електронна пошта:</label>
            <input type="email" id="email" name="email" required>
        </div>
        <br>
        <button type="submit">Додати студента</button>
    </form>
</body>
</html>
<?php
// Дані для підключення до бази даних
$servername = "localhost"; // Зазвичай "localhost"
$username = "your_database_username"; // Замініть на ваше ім'я користувача бази даних
$password = "your_database_password"; // Замініть на ваш пароль бази даних
$dbname = "your_database_name"; // Замініть на назву вашої бази даних

// Перевіряємо, чи були відправлені дані методом POST
if ($_SERVER["REQUEST_METHOD"] == "POST") {
    // Отримуємо значення з форми
    $name = $_POST["name"];
    $email = $_POST["email"];

    try {
        // Створюємо підключення до MySQL
        $conn = new mysqli($servername, $username, $password, $dbname);

        // Перевіряємо підключення
        if ($conn->connect_error) {
            die("Помилка підключення до бази даних: " . $conn->connect_error);
        }

        // Готуємо SQL запит для вставки даних
        $sql = "INSERT INTO students (name, email) VALUES (?, ?)";

        // Готуємо та прив'язуємо параметри
        $stmt = $conn->prepare($sql);
        $stmt->bind_param("ss", $name, $email);

        // Виконуємо запит
        if ($stmt->execute()) {
            echo "Нового студента успішно додано до бази даних.";
        } else {
            echo "Помилка при додаванні студента: " . $stmt->error;
        }

        // Закриваємо з'єднання
        $stmt->close();
        $conn->close();

    } catch (Exception $e) {
        echo "Виникла помилка: " . $e->getMessage();
    }
} else {
    echo "Будь ласка, скористайтеся формою для додавання студента.";
}
?>